# =================================
# Backend (Python/FastAPI)
# =================================

# Application
APP_NAME=Telegram Calls API
DEBUG=true
API_V1_PREFIX=/api/v1

# Database (для Docker Compose используйте postgres:5432, для локальной разработки - localhost:5433)
DATABASE_URL=postgresql+asyncpg://telegram_calls:telegram_calls_pass@postgres:5432/telegram_calls

# Redis (для Docker Compose используйте redis:6379, для локальной разработки - localhost:6379)
REDIS_URL=redis://redis:6379/0

# Security
SECRET_KEY=generate-with-python-secrets-token-urlsafe-32
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_from_botfather

# TURN/STUN Configuration
TURN_URLS=["turn:localhost:3478"]
STUN_URLS=["stun:stun.l.google.com:19302"]
TURN_USERNAME=telegram_calls
TURN_PASSWORD=telegram_calls_turn

# Server IP (для TURN сервера)
SERVER_IP=localhost

# CORS
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost","http://localhost:8000"]

# =================================
# Frontend (Vite/React)
# =================================

VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000
VITE_TELEGRAM_BOT_NAME=your_bot_name

# =================================
# Docker / Database
# =================================

# PostgreSQL (используется только docker-compose)
POSTGRES_USER=telegram_calls
POSTGRES_PASSWORD=telegram_calls_pass
POSTGRES_DB=telegram_calls

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
