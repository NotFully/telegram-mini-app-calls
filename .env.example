# =================================
# Backend (Python/FastAPI)
# =================================

# Application
APP_NAME=Telegram Calls API
DEBUG=false
API_V1_PREFIX=/api/v1

# Database
DATABASE_URL=postgresql+asyncpg://user:pass@localhost:5432/calls

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-change-in-production-min-32-chars-long
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_from_botfather

# TURN/STUN Configuration
TURN_URLS=["turn:your_turn_server:3478"]
STUN_URLS=["stun:stun.l.google.com:19302","stun:your_stun_server:3478"]
TURN_USERNAME=username
TURN_PASSWORD=password

# =================================
# Frontend (Vite/React)
# =================================

VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000
VITE_TELEGRAM_BOT_NAME=your_bot_name

# =================================
# Docker / Database
# =================================

# PostgreSQL
POSTGRES_USER=user
POSTGRES_PASSWORD=pass
POSTGRES_DB=calls

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
