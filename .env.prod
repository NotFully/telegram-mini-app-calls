# =================================
# Production Environment Variables
# =================================

# Backend (Python/FastAPI)
APP_NAME=Telegram Calls API
DEBUG=false
API_V1_PREFIX=/api/v1

# Database
DATABASE_URL=postgresql+asyncpg://telegram_calls:telegram_calls_pass@postgres:5432/telegram_calls

# Redis
REDIS_URL=redis://redis:6379/0

# Security - IMPORTANT: Change these values!
SECRET_KEY=CHANGE_THIS_TO_SECURE_32_CHAR_SECRET_KEY
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_FROM_BOTFATHER

# TURN/STUN Configuration
# Replace SERVER_IP with your server's public IP
SERVER_IP=YOUR_SERVER_PUBLIC_IP
TURN_URLS=["turn:YOUR_SERVER_PUBLIC_IP:3478"]
STUN_URLS=["stun:stun.l.google.com:19302"]
TURN_USERNAME=telegram_calls
TURN_PASSWORD=CHANGE_THIS_TURN_PASSWORD

# CORS
ALLOWED_ORIGINS=["https://app.notfully.ru","https://notfully.ru"]

# Frontend (Vite/React)
VITE_API_URL=https://backend.notfully.ru
VITE_WS_URL=wss://backend.notfully.ru
VITE_TELEGRAM_BOT_NAME=YOUR_BOT_USERNAME

# Database (для docker-compose)
POSTGRES_USER=telegram_calls
POSTGRES_PASSWORD=CHANGE_THIS_POSTGRES_PASSWORD
POSTGRES_DB=telegram_calls

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Traefik
TRAEFIK_ADMIN_EMAIL=admin@notfully.ru
